{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "target": "es6",
    "sourceMap": true,
    "outDir": "./dist",
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/",
    "paths": {
      "@core/*": ["core/*"],
      "@infras/*": ["infras/*"],
      "@utils/*": ["utils/*"]
    }
  },
  "include": ["./src/**/*", "./types/**/*"],
  "exclude": ["node_modules", "dist"]
}
